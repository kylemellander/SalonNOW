<div class="row display-content">
  <h2>Our Clients</h2>
  <% if @success_message != nil %>
  <div class="alert alert-success"><%= @success_message %></div>
  <% end %>
  <% if @clients.any? %>
  <table class="table table-striped table-hover">
    <tr>
      <th>Name</th>
      <th>Phone Number</th>
      <th>Stylist</th>
      <th></th>
    </tr>
    <% @clients.each do |client| %>
    <tr>
      <td class="name"><%= client.full_name %> - <a href="/clients/<%= client.id %>/edit">edit</a></td>
      <td class="phone"><%= client.phone %></td>
      <td class="stylist"><a href="/stylists/<%= client.stylist.id %>"><%= client.stylist.full_name %></a></td>
      <td class="delete text-right">
        <form action="/clients/<%= client.id %>" method="post">
          <input type="hidden" name="_method" value="delete">
          <button type="submit" id="btn-delete"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
        </form>
    </tr>
    <% end %>
  </table>
  <% else %>
  <h4>There are no clients. Why don't you <a href="/clients/new">add one</a>?</h4>
  <% end %>
</div>
